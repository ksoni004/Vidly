@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any())
{
    <p>Currently there are no movies!</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Name</td>
        </tr>
        }
    </table>
}
